<div class="navbar-video">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-video-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <div class="navbar-video-title">
    <h1>Video de Famille</h1>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-video-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
<!--       <%= link_to "Host", "#", class: "navbar-video-item navbar-video-link" %>
      <%= link_to "Trips", "#", class: "navbar-video-item navbar-video-link" %>
      <%= link_to "Messages", "#", class: "navbar-video-item navbar-video-link" %> -->

      <!-- Avatar with dropdown menu -->
      <div class="navbar-video-item">
        <div class="dropdown">
          <%= image_tag src = "https://avatars1.githubusercontent.com/u/25408202?s=40&u=19397960941285814fd1206d2a616e0c21caf0fa&v=4", class: "avatar dropdown-toggle", id: "navbar-video-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-video-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".reset password", default: "reset password") %>
              <% end %>
            </li>
            <li>
             <!--  <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %> -->
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-video-item navbar-video-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-video-item hidden-md hidden-lg">
    <div class="dropdown">

      <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-video-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-video-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-video-dropdown-menu">
          <!-- <li><a href="#">Some mobile link</a></li>
          <li><a href="#">Other one</a></li> -->
          <li><a href="#">Other one</a></li>
        </ul>
      <% end %>

    </div>
  </div>
</div>

